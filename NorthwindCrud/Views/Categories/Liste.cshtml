@model NorthwindCrud.Models.View.CategoriesModel
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Kategoriler</h2>
<form method="get" action="/Categories/Ekle">
    <button class="btn btn-primary">ekle</button>

</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>  @Html.DisplayNameFor(x => x.categories.CategoryID)</th>
            <th>  @Html.DisplayNameFor(x => x.categories.CategoryName)</th>
            <th>  @Html.DisplayNameFor(x => x.categories.Description)</th>
            <th>Detay</th>
            <th>Güncelle</th>
            <th>Sil</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.clist)
        {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td><a href="/Categories/Detay/@item.CategoryID"><i class="fas fa-search"></i></a></td>
            <td><a href="/Categories/Guncel/@item.CategoryID"><i class="fas fa-pen"></i></a></td>
            <td><a href="/Categories/Sil/@item.CategoryID"><i class="fas fa-trash-alt"></i></a></td>

        </tr>
        }

    </tbody>
</table>

